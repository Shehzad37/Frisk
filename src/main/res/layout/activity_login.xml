<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.coderchain.sa.frisk4.Login"
    android:background="#eceff1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your 4-digit PIN to get Access to App"
        android:id="@+id/textView6"
        android:layout_marginTop="65dp"

        android:layout_centerHorizontal="true"
        android:textColor="#282829"
        android:textStyle="bold" />

    <Button


        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="DONE"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/button2"
        android:onClick="act"
        android:background="@drawable/btnstyle"


        android:layout_marginTop="103dp"
        android:layout_below="@+id/pin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:minEms="4"
        android:maxLength="4"
        android:maxEms="4"
        android:id="@+id/pin"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textColor="#282829"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n(Activate app on next page to use all the features. If you have already done so neglect this message."
        android:id="@+id/textView7"
        android:textColor="#ff0000"
        android:textStyle="bold"

        android:paddingLeft="10dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:id="@+id/textView28"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00ca74"/>


</RelativeLayout>
